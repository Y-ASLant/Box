{
  "name": "box",
  "private": true,
  "version": "1.0.0",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "build:no-check": "vite build",
    "build:electron": "vue-tsc && vite build --config electron.vite.config.mjs && electron-builder",
    "build:electron-fast": "vite build --config electron.vite.config.mjs && electron-builder",
    "build:electron-no-check": "vite build --config electron.vite.config.mjs && electron-builder",
    "build:win": "npm run build:electron -- --win",
    "build:mac": "npm run build:electron -- --mac",
    "build:linux": "npm run build:electron -- --linux",
    "preview": "vite preview",
    "electron:dev": "vite --config electron.vite.config.mjs",
    "start": "npm run electron:dev"
  },
  "dependencies": {
    "vue": "latest",
    "vue-router": "latest"
  },
  "devDependencies": {
    "@types/node": "latest",
    "@vitejs/plugin-vue": "latest",
    "concurrently": "latest",
    "cross-env": "latest",
    "del-cli": "latest",
    "electron": "latest",
    "electron-builder": "latest",
    "terser": "latest",
    "typescript": "latest",
    "vite": "latest",
    "vite-plugin-electron": "latest",
    "vite-plugin-electron-renderer": "latest",
    "vue-tsc": "latest"
  },
  "build": {
    "appId": "top.aslant.box",
    "productName": "Box",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "assets/**/*"
    ],
    "compression": "maximum",
    "asar": true,
    "removePackageScripts": true,
    "extraResources": [],
    "extraFiles": [],
    "electronLanguages": [
      "zh-CN"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "./assets/index.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "shortcutName": "Box",
      "perMachine": false,
      "deleteAppDataOnUninstall": true,
      "installerIcon": "./assets/index.ico",
      "uninstallerIcon": "./assets/index.ico",
      "installerHeaderIcon": "./assets/index.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "./assets/index.ico"
    },
    "linux": {
      "icon": "assets",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "Utility",
      "maintainer": "ASlant <aslant2002@outlook.com>",
      "vendor": "ASlant",
      "synopsis": "Box",
      "description": "一个专用于web演示的Electron应用."
    }
  },
  "overrides": {
    "rimraf": "latest",
    "@npmcli/move-file": "latest"
  }
}
